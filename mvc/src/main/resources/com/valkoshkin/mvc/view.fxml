<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox spacing="32" xmlns:fx="http://javafx.com/fxml" fx:controller="com.valkoshkin.mvc.Controller">
    <VBox spacing="16">
        <Button text="Add row" onAction="#onAddRowButtonClick" />
        <TableView fx:id="tableView" editable="true" prefWidth="400" prefHeight="550" layoutY="30" >
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
                <TableColumn fx:id="xColumn" text="X" sortable="false"
                             prefWidth="200" minWidth="150" maxWidth="250" />
                <TableColumn fx:id="yColumn" text="Y" sortable="false"
                             prefWidth="200" minWidth="150" maxWidth="250" />
            </columns>
        </TableView>
    </VBox>
    <VBox spacing="16" alignment="TOP_CENTER">
        <ImageView>
            <Image url="@images/function.png"/>
        </ImageView>
        <LineChart fx:id="lineChart" prefWidth="600" prefHeight="550" layoutY="30">
            <xAxis>
                <NumberAxis label="X" lowerBound="-50.0" upperBound="50.0" side="BOTTOM" tickLabelFill="blue"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Y" lowerBound="-50.0" upperBound="50.0" side="LEFT" tickLabelFill="red"/>
            </yAxis>
        </LineChart>
    </VBox>
</HBox>
